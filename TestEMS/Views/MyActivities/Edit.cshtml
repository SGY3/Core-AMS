@model TestEMS.Models.MyActivityViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MyActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
